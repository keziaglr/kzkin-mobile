<!--        <item name="android:fontFamily">@font/poppins</item>-->
<!--    </style>-->
    <style name="Theme.KZkin.FontLarge" parent="Theme.KZkin">
        <item name="textAppearanceBody1">@style/TextAppearance.KZkin.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.KZkin.Body2</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.KZkin.Headline6</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.KZkin.Subtitle2</item>
    </style>

    <style name="TextAppearance.KZkin.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">30sp</item>
    </style>
    <style name="TextAppearance.KZkin.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="TextAppearance.KZkin.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="TextAppearance.KZkin.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">18sp</item>
    </style>

</resources>